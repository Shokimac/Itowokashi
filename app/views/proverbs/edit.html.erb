<div class="editProverb">

    <div class="editProverb__section">
        <h1>格言編集</h1>
    </div>


    <%= form_with model:@proverb, local: true do |f| %>
    <%= render 'layouts/error_message', model: f.object %>

    <div class="input">
        <%= f.label :body, "格言", class:"input__label" %><br>
        <%= f.text_field :body, class:"input__form" %>
    </div>
    <div class="input">
        <%= f.label :name, "誰の格言か", class:"input__label" %><br>
        <%= f.text_field :name, class:"input__form" %>
    </div>

    <div class="input">
        <%= f.label :introduction, "格言に対してのコメント", class:"input__label" %><br>
        <%= f.text_area :introduction, class:"input__form--area" %>
    </div>

    <%= f.submit "更新する", class:"editProverb__button" %>
    <% end %>

</div>