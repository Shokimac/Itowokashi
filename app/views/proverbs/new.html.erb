<div class="newProverb">

    <h1 class="newProverb__section">格言投稿</h1>

    <div class="input">
        <%= form_with model:@proverb, local: true do |f| %>
        <%= render 'layouts/error_message', model: f.object %>

        <%= f.label :body, "格言", class:"input__label" %>
        <%= f.text_field :body, placeholder:"格言を入力してください", class:"input__form" %>

        <%= f.label :name, "誰の格言か", class:"input__label" %>
        <%= f.text_field :name, placeholder:"格言主を入力してください", class:"input__form" %>

        <%= f.label :introduction, "格言に対してのコメント", class:"input__label" %>
        <%= f.text_area :introduction, placeholder:"この格言に対するあなたの印象を入力してください", class:"input__form" %>

        <%= f.submit "投稿する", class:"input__button" %>

        <% end %>
    </div>
</div>