<div class="showEpisode">

        <div class="showEpisode__section">
                <h1>エピソード詳細</h1>
        </div>

        <div class="mainArea">
                <div class="leftSide">
                        <div class="leftSide__name">
                                <p>ユーザー名： <%= @user.name %> </p>
                        </div>
                        <%= attachment_image_tag(@user, :image, size: "300x250", fallback: "no_image.png", class:"leftSide__image") %>

                        <div id="episode__favoritesButton" class="leftSide__favorite">
                                <%= render partial: 'episode_favorites/favorite', locals: { episode: @episode} %>
                        </div>
                        <div class="leftSide__bookmark">
                                <%= render partial: 'episode_bookmarks/bookmark', locals: { episode: @episode} %>
                        </div>
                </div>

                <div class="rightSide">
                        <div class="rightSide__label">
                                <p>タイトル</p>
                        </div>
                        <div class="rightSide__title">
                                <p><%= @episode.title %></p>
                        </div>
                        <div class="rightSide__label">
                                <p>内容</p>
                        </div>
                        <div class="rightSide__body">
                                <p><%= @episode.body %></p>
                        </div>
                        <% if @user == current_user %>
                        <%= link_to "編集する", edit_episode_path(@episode), class:"rightSide__button" %>
                        <%= link_to "削除する", @episode_path, method: :delete, data: {confirm: "削除しますか??"}, class:"rightSide__button--delete" %>
                        <% end %>
                </div>
        </div>
</div>