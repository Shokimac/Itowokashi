<div class="editEpisode">

    <h1 class="editEpisode__section">エピソード編集</h1>

    <div class="input">

        <%= form_with model: @episode, local: true do |f| %>

        <%= render 'layouts/error_message', model: f.object %>
        <%= f.label :title, "タイトル", class:"input__label" %>
        <%= f.text_field :title, class:"input__form" %>

        <%= f.label :body, "内容", class:"input__label" %>
        <%= f.text_field :body, class:"input__form" %>

        <%= f.submit "更新する", class:"input__button" %>

        <% end %>
    </div>

</div>