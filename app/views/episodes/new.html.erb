<div class="newEpisode">
    <div class="newEpisode__section">
        <h1>エピソード投稿</h1>
    </div>

    <%= form_with model:@episode, local: true do |f| %>
    <%= render 'layouts/error_message', model: f.object %>

    <div class="input">
        <%= f.label :title, "タイトル", class:"input__label" %><br>
        <%= f.text_field :title, placeholder:"タイトルを入力してください", class:"input__form" %>
    </div>
    <div class="input">
        <%= f.label :body, "内容", class:"input__label" %><br>
        <%= f.text_area :body, placeholder:"エピソードの内容を入力してください", class:"input__form--area" %>
    </div>

    <%= f.submit "投稿する", class:"newEpisode__button" %>

    <% end %>
</div>