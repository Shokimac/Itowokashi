<!DOCTYPE html>
<html>

<head>
  <title>いとをかし</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class="header">
    <div class="header__logo">いとをかし</div>
    <div class="header__nav">
      <ul>
        <% if user_signed_in? %>
        <li>
          <%= link_to " マイページ", user_path(current_user) %>
        </li>
        <li>
          <%= link_to " エピソード", episodes_path %>
        </li>
        <li>
          <%= link_to " 格言", proverbs_path %>
        </li>
        <li>
          <%= link_to " 検索", search_path %>
        </li>
        <li>
          <%= link_to(" ログアウト", destroy_user_session_path, { method: :delete ,class: "glyphicon glyphicon-log-out"}) %>
        </li>
        <% else %>
        <li>
          <%= link_to " いとをかしとは", about_path %>
        </li>
        <li>
          <%= link_to " ログイン", new_user_session_path %>
        </li>
        <li>
          <%= link_to " 新規登録", new_user_registration_path %>
        </li>
        <% end %>
      </ul>
    </div>
    <div class="header__search">
      <%= form_tag(search_path, method: :get) do %>
      <%= text_field_tag (:word), "", class:"form-inline" %>
      <%= select_tag 'range' ,options_for_select([['エピソードから検索', '1'], ['格言から検索', '2']]), class:"btn-default btn-sm" %>
      <%= submit_tag "検索", class:"btn-default btn-sm" %>
      <% end %>
    </div>
  </header>

  <main>
    <p class="notice"><%= notice %></p>
    <%= yield %>
  </main>
  <br>
  <footer>お問い合わせ</footer>
</body>

</html>