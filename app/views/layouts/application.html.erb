<!DOCTYPE html>
<html>

<head>
  <title>いとをかし</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <link href="https://use.fontawesome.com/releases/v5.6.1/css/all.css" rel="stylesheet">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header>
    <nav>
      <div>
        <div>
          <div>
            <h1>LOGO</h1>
          </div>
          <div>
            <ul style="float:right">
              <% if user_signed_in? %>
              <li style="float:right">
                <%= link_to " マイページ", user_path(current_user) %>
              </li>
              <li style="float:right">
                <%= link_to " エピソード", episodes_path %>
              </li>
              <li style="float:right">
                <%= link_to " 格言", proverbs_path %>
              </li>
              <li style="float:right">
                <%= link_to " 検索", search_path %>
              </li>
              <li style="float:right">
                <%= link_to(" ログアウト", destroy_user_session_path, { method: :delete ,class: "glyphicon glyphicon-log-out"}) %>
              </li>
              <% else %>
              <li style="float:right">
                <%= link_to " いとをかしとは", about_path %>
              </li>
              <li style="float:right">
                <%= link_to " ログイン", new_user_session_path %>
              </li>
              <li style="float:right">
                <%= link_to " 新規登録", new_user_registration_path %>
              </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
      <div class="search", style="float:right">
        <div class="search__form">
          <%= form_tag(search_path, method: :get) do %>
          <%= text_field_tag (:word), "", class:"form-inline" %>
          <%= select_tag 'range' ,options_for_select([['エピソードから検索', '1'], ['格言から検索', '2']]), class:"btn-default btn-sm" %>
          <%= submit_tag "検索", class:"btn-default btn-sm" %>
          <% end %>
        </div>
      </div>

    </nav>
  </header>
  <main>
    <p class="notice"><%= notice %></p>
    <%= yield %>
  </main>
  <footer class="footer">お問い合わせ</footer>
</body>

</html>