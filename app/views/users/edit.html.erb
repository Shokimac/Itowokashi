<h1>プロフィール編集</h1>

<div class="row">
    <%= form_with model: @user, url: user_path(@user.id) do |f| %>
    <div class="col-xs-4">
        <%= attachment_image_tag(@user, :image, size: "400x300", fallback: "no_image.png") %><br>
        <%= f.attachment_field :image %>
    </div>
    <div class="col-xs-8">
        <div class="field">
            <%= f.label :name, "ユーザー名" %>
            <%= f.text_field :name %>
        </div>
        <div class="field">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email %>
        </div>
        <%= link_to "パスワード変更", edit_user_registration_path %>
        <div class="field">
            <%= f.label :introduction, "自己紹介文" %>
            <%= f.text_area :introduction %>
        </div>

        <%= f.submit "更新" %>

        <%= link_to "退会する", user_withdrawal_path(@user.id) %>

    </div>
    <% end %>
</div>